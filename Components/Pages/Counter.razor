@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status" class="text-primary">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Only Click Me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
